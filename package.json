{
  "name": "crm-api",
  "version": "1.0.0",
  "description": "REST API to manage customer data for a small shop.",
  "engines": {
    "node": ">= 14.16 <15"
  },
  "main": "dist/server.js",
  "scripts": {
    "lint:fix": "eslint src --fix",
    "build:prod": "rm -rf dist && tsc -p src/tsconfig.production.json",
    "dev:server": "nodemon --watch './**/*.ts' --exec 'ts-node' src/server.ts",
    "start": "node dist/server.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maikarox/CRM-API.git"
  },
  "author": "María García",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/maikarox/CRM-API/issues"
  },
  "homepage": "https://github.com/maikarox/CRM-API#readme",
  "dependencies": {
    "axios": "^0.22.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-jwt": "^6.1.0",
    "express-jwt-authz": "^2.4.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.4",
    "mongoose": "^6.0.9",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.1.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express-jwt": "^6.0.2",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.10.3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.5.2",
    "husky": "^7.0.2",
    "jest": "^26.6.1",
    "lint-staged": "^11.2.0",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^26.4.3",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/{src,test}/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "@shelf/jest-mongodb",
    "transform": {
      "^.+\\.ts": "ts-jest"
    }
  }
}
